{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile JavaFX Billing System",
            "type": "shell",
            "command": "javac",
            "args": [
                "--module-path",
                "./javafx-sdk-17.0.2/lib",
                "--add-modules",
                "javafx.controls,javafx.fxml",
                "-d",
                "bin",
                "src/billingsystem/*.java",
                "src/systemstyle/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
} 